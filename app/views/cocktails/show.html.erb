<div class="wrapper">
    <h1><%= @cocktail.name %></h1>
    <div class="cards">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo, height: 300, width: 400, crop: :fill %>')">
          <% @cocktail.doses.each do |dose| %>
            <%= dose.ingredient.name %> <%= dose.description %><br>
        <% end %>
        </div>
    </div>
    <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail) %> <br>
    <%= link_to "Go Back", cocktails_path %>
</div>
